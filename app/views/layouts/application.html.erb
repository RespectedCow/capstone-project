<!DOCTYPE html>
<html>
  <head>
    <title>Ehassle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <%= link_to  "Ehassle", root_path , class: "nav-header navbar-brand" %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to  "Home", root_path, class: "nav-link" %>
            </li>
              
        </div>

        <% if user_signed_in? %>
          <p class="margin-left" style="font-size: 17px;"><%= current_user.email %></p>
          <%= link_to  "Logout", destroy_user_session_path , class: "margin-left btn btn-outline-success my-2 my-sm-0", method: :delete %>
        <% else %>
          <%= link_to  "Sign  up", new_user_registration_path , class: "btn btn-primary my-sm-2" %>
          <%= link_to  "Login", user_session_path , class: "margin-left btn btn-outline-success my-2 my-sm-0" %>
        <% end %>
    </nav>
    <main>
      <%= yield %>
    </main>
    <footer>

    </footer>
  </body>
</html>
